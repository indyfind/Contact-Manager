@model IEnumerable<ContactManager.Models.Person>

@{
    ViewData["Title"] = "Contacts";
}

<h2>Contacts</h2>

<p>

    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="People" asp-action="Index">
    <p>
        Phone: <input type="text" name="SearchString" method="get">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="Name">@Html.DisplayNameFor(model => model.Name)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="Phone">@Html.DisplayNameFor(model => model.Phone)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="HomePhone">@Html.DisplayNameFor(model => model.HomePhone)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="Email">@Html.DisplayNameFor(model => model.Email)</a>
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @String.Format("{0: (###) ###-####}", Convert.ToInt64(item.Phone))
            </td>
            <td>
                @String.Format("{0: (###) ###-####}", Convert.ToInt64(item.HomePhone))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
